<div class="pure-menu pure-menu-open pure-menu-fixed pure-menu-horizontal">
  <a class="pure-menu-heading">Movie Ninja</a>
  <ul>
    <% if signed_in? %>
      <li><a href="#"><i class="fa fa-bars" id="toggle-sidebar-button"></i></a></li>
      <li><%= button_to "logout", session_path(current_user), class: 'pure-button', method: :delete %></li>
    <% else %>
      <li><button class="pure-button" data-toggle="modal" href="#myModal">Login</button></li>
    <% end %>
  </ul>
</div>

<!-- Button trigger modal -->
<% unless signed_in? %>
  <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
      <h2 id="myModalLabel">Sign In / Sign Up</h2>
    </div>

    <div class="modal-body pure-g">
      <div class="pure-u-1-2">
        <%= render partial: "layouts/signup", locals: {user: @user} %>
      </div>
      <div class="pure-u-1-2">
        <%= render partial: "layouts/signin", locals: {user: @user} %>
      </div>
    </div>

    <div class="modal-footer">
      <button class="pure-button" data-dismiss="modal" aria-hidden="true">Close</button>
    </div>
  </div>
<% end %>